<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back_iv"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="添加设备"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/device_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:text=""
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/device_title_tv"
                android:id="@+id/device_connect_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/start_iv"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/start_1"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/scan_blue_rl"
        android:background="#019BFF"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <com.mlink.bluetooth.gateway.view.RadarView
            android:id="@+id/radar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            app:circleColor="@color/white"
            app:circleNum="4"
            app:flicker="2"
            android:layout_centerVertical="true"
            app:speed="2"
            android:layout_marginLeft="10dp"
            app:sweepColor="#565cd6"
            app:showCross="false"
            app:raindropNum="4"/>
        <TextView
            android:layout_toRightOf="@+id/radar"
            android:text="正在加入子设备，请耐心等待"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <de.blox.treeview.TreeView
            android:id="@+id/treeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lineColor="@android:color/holo_blue_dark"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>